<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".biodata">


    <TextView
        android:id="@+id/textViewBio"
        android:layout_width="171dp"
        android:layout_height="41dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="152dp"
        android:fontFamily="@font/concert_one"
        android:gravity="center_horizontal"
        android:text="BIODATA"
        android:textAlignment="center"
        android:textColor="@color/oren"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutHr"
        android:layout_width="374dp"
        android:layout_height="137dp"
        android:layout_marginTop="16dp"
        android:background="#898EEC"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBio">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayout"
            android:layout_width="236dp"
            android:layout_height="120dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="205dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:text="Nama"
                    android:textSize="11dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:gravity="right"
                    android:text="Siti Nisrina Nabilah Puteri Sulfi Yudo"
                    android:textSize="11dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">>

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:text="Tempat Tanggal Lahir"
                    android:textSize="11dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:fontFamily="monospace"
                    android:text="Temanggung, 03 Juni 2001"
                    android:textSize="11dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">>

                <TextView
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:text="Asal Sekolah"
                    android:textSize="11dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:fontFamily="monospace"
                    android:text="SMAN 1 MAKASSAR"
                    android:textSize="11dp" />

            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="32dp"
            android:background="@color/teal_200"
            android:src="@drawable/ic_people"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutHr2"
        android:layout_width="390dp"
        android:layout_height="57dp"
        android:layout_marginHorizontal="0dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutHr">


        <ImageButton
            android:id="@+id/button"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:backgroundTint="@color/pink"
            android:onClick="moveMain"
            android:src="@drawable/ic_back" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/yellow"
            android:onClick="exit"
            android:src="@drawable/ic_power" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>