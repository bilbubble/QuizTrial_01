<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/linearLayout2"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/teal_200"
    tools:context=".MainActivity"
    tools:ignore="InvalidId">

    <TextView
        android:id="@+id/textViewBio"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="204dp"
        android:fontFamily="@font/candal"
        android:gravity="center_horizontal"
        android:text="QUIZ"
        android:textAlignment="center"
        android:textColor="#6B369F"
        android:textSize="29dp"
        android:background="#E0BBE4"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSI"
        android:layout_width="329dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:background="#CCE2CB"
        android:fontFamily="@font/candal"
        android:gravity="center_horizontal"
        android:text="PEMROGRAMAN MOBILE"
        android:textAlignment="center"
        android:textColor="#26852A"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewBio" />

    <TextView
        android:id="@+id/biodata"
        android:layout_width="317dp"
        android:layout_height="33dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/concert_one"
        android:gravity="center_horizontal"
        android:onClick="biodataz"
        android:text="BIODATA"
        android:textAlignment="center"
        android:textColor="@color/purple"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewSI" />

    <LinearLayout
        android:id="@+id/linearLayoutHr"
        android:layout_width="360dp"
        android:layout_height="59dp"
        android:layout_marginHorizontal="0dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/biodata">


        <ImageButton
            android:id="@+id/button"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="moveMaps"
            android:backgroundTint="@color/pink"
            android:src="@drawable/ic_home" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/teal_300"
            android:onClick="moveCall"
            android:src="@drawable/ic_call" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="360dp"
        android:layout_height="59dp"
        android:layout_marginHorizontal="0dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutHr"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutHr"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutHr">

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/yellow"
            android:src="@drawable/ic_power"
            android:onClick="exit"/>

    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="311dp"
        android:layout_height="44dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/amaranth"
        android:gravity="center_horizontal"
        android:text="Siti Nisrina Nabilah Puteri Sulfi Yudo (H071191001)"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout3" />



</androidx.constraintlayout.widget.ConstraintLayout>